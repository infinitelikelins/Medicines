<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    tools:ignore="MissingDefaultResource">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="660dp"
        android:layout_height="500dp"
        android:layout_gravity="center"
        android:background="@drawable/shape_rectangle_white_16">

        <androidx.appcompat.widget.AppCompatTextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:minHeight="56dp"
            android:text="@string/total_money"
            android:textColor="@color/text_color_headline"
            app:autoSizeTextType="uniform"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.1"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintWidth_percent="0.4" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/payment_total"
            android:layout_width="0dp"
            android:layout_height="160dp"
            android:drawablePadding="8dp"
            android:gravity="center"
            android:maxLines="1"
            android:padding="8dp"
            android:textColor="@color/text_color_headline"
            android:textStyle="bold"
            app:autoSizeTextType="uniform"
            app:drawableStartCompat="@drawable/ic_baseline_rmb_50"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.4"
            app:layout_constraintWidth_percent="0.6"
            tools:text="20.0" />

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/pay_completed"
            android:layout_width="160dp"
            android:layout_height="144dp"
            android:layout_margin="24dp"
            android:gravity="center"
            android:textColor="@color/text_color_headline"
            app:autoSizeTextType="uniform"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:srcCompat="@drawable/ic_baseline_pay_completed_150" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</layout>
